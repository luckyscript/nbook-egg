.archive {
  width: 500px;
  margin: 5em auto;
  & .archive-year {
    display: block;
    font-size: 1.2em;
    font-weight: bold;
    margin: 1em 0 0.5em 0;
  }
  & .post-item {
    padding: 2px 0 0 50px;
    overflow: hidden;
    & .post-info {
      float: left;
      width: 125px;
      color:#7f8c8d;
    }
    & .post-title-link {
      display: block;
      margin-left: 125px;
      color: #42b983;
      word-break: break-all;
    }
  }
}